<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.moviecatalogapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <permission android:name="com.example.android.moviecatalogapp.READ_DATABASE"
        android:protectionLevel="normal"/>

    <permission android:name="com.example.android.moviecatalogapp.WRITE_DATABASE"
        android:protectionLevel="normal"/>

    <application
        android:name=".TheApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_jeans_film_clapper"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".primary_ui.activities.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".primary_ui.activities.alarm_reminder.dailies.DailyReminderActivity"/>

        <receiver
            android:name=".feature.alarm_reminder.daily.DailyAlarmReceiver"
            android:enabled="true"
            android:exported="true"/>

        <activity
            android:name=".primary_ui.activities.details.DetailMovieActivity"
            android:theme="@style/AppTheme"/>

        <service
            android:name=".feature.alarm_reminder.upcoming.UpcomingMoviesJobService"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>

        <activity android:name=".primary_ui.activities.settings.SettingsActivity"
            android:theme="@style/AppTheme"/>
        <provider
            android:authorities="com.example.android.moviecatalogapp"
            android:name=".provider.FavoriteMovieProvider"
            android:exported="true"
            android:readPermission="com.example.android.moviecatalogapp.READ_DATABASE"
            android:writePermission="com.example.android.moviecatalogapp.WRITE_DATABASE"/>

    </application>

</manifest>