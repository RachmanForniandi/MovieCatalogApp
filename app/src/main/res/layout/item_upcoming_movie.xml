<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/img_view_poster_item_upcoming_movie"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/tv_title_item_movie_upcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_view_poster_item_upcoming_movie"
        android:layout_toEndOf="@id/img_view_poster_item_upcoming_movie"
        android:textSize="16sp"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_description_item_movie_upcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/img_view_poster_item_upcoming_movie"
        android:layout_toEndOf="@id/img_view_poster_item_upcoming_movie"
        android:layout_below="@id/tv_title_item_movie_search"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_date_release_item_movie_upcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/img_view_poster_item_search_movie"
        android:layout_toEndOf="@id/img_view_poster_item_search_movie"
        android:layout_below="@id/tv_description_item_movie_search"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_date_release_item_movie_upcoming"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/img_view_poster_item_upcoming_movie"
        android:layout_toEndOf="@id/img_view_poster_item_upcoming_movie">

        <Button
            android:id="@+id/btn_detail_item_upcoming_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/detail"
            android:textColor="#ffffff"
            android:background="@drawable/background_button_rounded_green_emerald"/>

        <View
            android:layout_width="8dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/btn_share_item_upcoming_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/share"
            android:textColor="#ffffff"
            android:background="@drawable/background_button_rounded_green_emerald"/>

    </LinearLayout>

</RelativeLayout>